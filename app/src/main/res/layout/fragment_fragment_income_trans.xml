<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.fragmentIncomeTrans">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:text="Income"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <EditText
                    android:id="@+id/dpPostingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Posting Date"
                    android:inputType="datetime" />

                <Spinner
                    android:id="@+id/spinAccountHead"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    tools:ignore="UnknownId" />

                <EditText
                    android:id="@+id/etExpenseAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Income Amount"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/spinPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    />

                <Spinner
                    android:id="@+id/spinBankName"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    />

                <Spinner
                    android:id="@+id/spinBankAcc"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    />

                <EditText
                    android:id="@+id/etChequeNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cheque No"
                    android:inputType="textPersonName"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="101dp"
                    android:ems="10"
                    android:hint="Descripton"
                    android:inputType="textMultiLine" />

                <EditText
                    android:id="@+id/etRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Remark"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />

                <Spinner
                    android:id="@+id/spinPaymentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    />

                <EditText
                    android:id="@+id/etTransIdExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:ems="10"
                    android:visibility="invisible"
                    android:hint="transId"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/etreferenceNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Ref" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                >

                <Button
                    android:id="@+id/btnSaveExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save" />

                <Button
                    android:id="@+id/btnCancelExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btnRefreshExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refresh" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>