<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".FragmentList.fragmentBankAccountList">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank Acc"
        android:textSize="20dp"
        android:gravity="center"
        />

    <SearchView
        android:id="@+id/searchBankAcc"
        android:layout_width="290dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp" />

    <Button
        android:id="@+id/btnAddNewBankAcc"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/searchBankAcc"
        android:text="New" />
    <LinearLayout
        android:layout_marginTop="80dp"
        android:id="@+id/lvBankNameCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:padding="5dp"

        >
        <TextView
            android:id="@+id/tvBankAccName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bank/Acc"
            android:gravity="left"
            android:visibility="visible"
            android:layout_weight="3"
            android:textSize="15dp"

            />
        <TextView
            android:id="@+id/tvBranchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Branch"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <ListView
            android:layout_marginTop="100dp"
            android:id="@+id/lvBankAccList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>


</RelativeLayout>