<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountheadList"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvBankAccIdLV"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Bank Acc Id"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tvBankAccNameLV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Account Name"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tvBankIdLV"
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:text="Bank Id"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tvBankNamLVe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Bank Name"
            />
        <TextView
            android:id="@+id/tvBranchNameLV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Branch Name"
            />
    </LinearLayout>
</LinearLayout>
